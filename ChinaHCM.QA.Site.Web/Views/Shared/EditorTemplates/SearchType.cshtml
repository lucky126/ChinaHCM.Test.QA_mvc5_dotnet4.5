@using ChinaHCM.QA.Core.Model;
@model SearchType
           
@foreach (int value in Enum.GetValues(typeof(SearchType)))
{
    <span>
    @Html.RadioButton(Enum.GetName(Model.GetType(), value), value, value == (int)Model, new { @Name = "SearchType" }) 
    @GlobalConst.SearchTypeName[value]
    </span>
}
