@using ChinaHCM.QA.Site.Web.Models
@model BoardList
@{
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "帖子管理";
}
<div id="listBody" class="container">
    @using (Html.BeginForm("SelectBoard", "Board", FormMethod.Post, new { @class = "form-inline", role = "form" }))
    {
        <div class="form-group">
            选择所要维护的版区
        </div>
        <div class="form-group">
            @Html.DropDownList("boardId", null, new { @class = "form-control" })
        </div>
    <div class="form-group">
        <input type="submit" value="  确 定 " class="btn btn-primary" />
    </div>
    <div class="form-group">
        @Html.ValidationSummary()
    </div>
    }
</div>
