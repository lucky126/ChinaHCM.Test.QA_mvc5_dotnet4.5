<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=9">
    <title>互动交流MVC版管理系统</title>
    <link href="@Url.Content("~/Content/Manager.css")" rel="stylesheet" type="text/css" />
</head>
<body class="leftframe">
    <div id="Menu">
        <ul class="OutMenu">
            <li id="one"><a href="javascript:void(0)" class="noclass">首页</a>
                <ul class="InMenu">
                    <li><a href="@Url.Action("Main", "Board")" target="Main">首页</a></li>
                </ul>
            </li>
            @if (ViewBag.IsAdmin)
            { 
            <li id="two"><a href="javascript:void(0)" class="noclass">版区信息管理</a>
                <ul class="InMenu">
                    <li><a href="@Url.Action("EditBoard", "Board", new { boardId = 0, parentId = 0 })" target="Main">新增板块</a></li>
                    <li><a href="@Url.Action("BoardManager", "Board")"  target="Main">版区管理</a></li>
                </ul>
            </li>
            }
            <li id="three"><a href="javascript:void(0)" class="noclass">帖子内容管理</a>
                <ul class="InMenu">
                    <li><a href="@Url.Action("SelectBoard", "Board")" target="Main">帖子管理</a></li>
                    <li><a href="@Url.Action("KeywordsManager", "String")" target="Main">关键字管理</a></li>
                </ul>
            </li>
             @if (ViewBag.IsAdmin)
             { 
            <li id="four"><a href="javascript:void(0)" class="noclass">用户权限管理</a>
                <ul class="InMenu">
                    <li><a href="@Url.Action("AdminManager", "Account")" target="Main">管理员管理</a></li>
                    <li><a href="@Url.Action("UserManager", "Account")" target="Main">用户管理</a></li>
                </ul>
            </li>
             }
        </ul>
    </div>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/QA.admin.js")" type="text/javascript"></script>
</body>
</html>
